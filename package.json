{
  "name": "ludwig-es",
  "displayName": "Ludwig ES",
  "description": "HTML-React-Angular Accessibility Toolkit",
  "version": "2.0.0",
  "icon": "./assets/Ludwig-VSMarket.jpg",
  "publisher": "LudwigVS",
  "homepage": "https://www.ludwigvs.com",
  "engines": {
    "vscode": "^1.91.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:html",
    "onLanguage:javascriptreact",
    "onLanguage:typescriptreact"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "ludwig.scanDoc",
        "title": "Scan Document",
        "category": "Ludwig",
        "when": "editorLangId =~ /html|javascriptreact|typescriptreact/"
      },
      {
        "command": "ludwig.scanAllDocs",
        "title": "Scan All Documents",
        "category": "Ludwig",
        "when": "workspaceFolderCount > 0"
      },
      {
        "command": "ludwig.toggleLintActiveFile",
        "title": "Toggle Lint Active File",
        "category": "Ludwig",
        "when": "editorLangId =~ /html|javascriptreact|typescriptreact/"
      },
      {
        "command": "ludwig.toggleLintAllFiles",
        "title": "Toggle Lint All Files",
        "category": "Ludwig",
        "when": "workspaceFolderCount > 0"
      },
      {
        "command": "ludwig.clearDiagnostics",
        "title": "Clear ESLint Results",
        "category": "Ludwig",
        "when": "ludwigDiagnosticsPresent"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "ludwigActivityBar",
          "title": "Ludwig",
          "icon": "assets/Ludwig-Logo-Icon.png"
        }
      ]
    },
    "views": {
      "ludwigActivityBar": [
        {
          "id": "ludwigPrimaryWebview",
          "name": "Report Generator",
          "type": "webview"
        }
      ]
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/vision-null/Ludwig"
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-react": "webpack --config webpack.config.js --env target=react",
    "watch-react": "webpack --config webpack.config.js --watch",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "lint": "eslint src --ext ts,tsx",
    "lint:fix": "eslint src --ext ts,tsx --fix",
    "lint:debug": "eslint src --ext ts,tsx --debug",
    "test": "vscode-test",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,scss,md}\""
  },
  "devDependencies": {
    "@babel/core": "^7.24.7",
    "@babel/preset-env": "^7.24.7",
    "@babel/preset-react": "^7.24.7",
    "@babel/preset-typescript": "^7.24.7",
    "@types/node": "20.x",
    "@types/vscode": "^1.91.0",
    "@vscode/test-cli": "^0.0.9",
    "babel-loader": "^9.1.3",
    "clean-webpack-plugin": "^4.0.0",
    "css-loader": "^7.1.2",
    "eslint": "8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "prettier": "^3.3.3",
    "style-loader": "^4.0.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.4.5",
    "webpack": "^5.92.1",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^7.16.0",
    "@typescript-eslint/parser": "^7.16.0",
    "bufferutil": "^4.0.8",
    "chart.js": "^4.4.3",
    "eslint-plugin-jsx-a11y": "^6.9.0",
    "jsdom": "^24.1.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-minimal-pie-chart": "^8.4.0"
  }
}
