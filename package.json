{
  "name": "ludwigvs",
  "displayName": "Ludwig VS",
  "description": "WAI-ARIA Accessibility Linter",
  "version": "1.0.3",
  "icon": "./assets/Ludwig-VSMarket.jpg",
  "publisher": "LudwigVS",
  "homepage": "https://www.ludwigvs.com",
  "engines": {
    "vscode": "^1.84.2"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:html"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "ludwig.highlightElements",
        "title": "Ludwig: Compose"
      },
      {
        "command": "ludwig.toggleOff",
        "title": "Ludwig: Caesura"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "ludwigActivityBar",
          "title": "Ludwig",
          "icon": "assets/Ludwig-Logo-Icon.png"
        }
      ]
    },
    "views": {
      "ludwigActivityBar": [
        {
          "id": "ludwigSidebarView",
          "name": "Compose",
          "contextualTitle": "Ludwig",
          "type": "webview"
        }
      ]
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/oslabs-beta/Ludwig"
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "build-dashboard": "webpack --config ./react-dashboard/webpack.config.js",
    "build-sidebar": "webpack --config ./react-sidebar/webpack.config.js",
    "start": "nodemon ./react-dashboard/src/server.js"
  },
  "devDependencies": {
    "@babel/core": "^7.23.5",
    "@babel/preset-env": "^7.23.5",
    "@babel/preset-react": "^7.23.3",
    "@types/jsdom": "^21.1.6",
    "@types/mocha": "^10.0.3",
    "@types/node": "^18.19.39",
    "@types/vscode": "^1.84.2",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "autoprefixer": "^10.4.16",
    "babel-loader": "^9.1.3",
    "css-loader": "^6.8.1",
    "eslint": "^8.52.0",
    "glob": "^10.3.10",
    "html-webpack-plugin": "^5.5.3",
    "mocha": "^10.2.0",
    "nodemon": "^3.0.2",
    "style-loader": "^3.3.3",
    "ts-loader": "^9.5.0",
    "typescript": "^5.2.2",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "bufferutil": "^4.0.8",
    "canvas": "^2.11.2",
    "jsdom": "^22.1.0",
    "node": "^21.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "victory": "^36.7.0"
  }
}
